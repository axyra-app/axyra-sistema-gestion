{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/paypal-payment.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/check-user-plan.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/process-wompi-payment.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/processPayPalPayment",
      "dest": "/api/paypal-payment.js"
    },
    {
      "src": "/api/checkUserPlan",
      "dest": "/api/check-user-plan.js"
    },
    {
      "src": "/api/processWompiPayment",
      "dest": "/api/process-wompi-payment.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
