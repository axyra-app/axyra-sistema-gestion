{
  "version": 2,
  "name": "axyra-sistema-gestion",
  "buildCommand": "echo 'Build completed'",
  "outputDirectory": "frontend",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/processPayPalPayment",
      "dest": "/api/paypal-payment.js"
    },
    {
      "src": "/api/checkUserPlan",
      "dest": "/api/check-user-plan.js"
    },
    {
      "src": "/api/processWompiPayment",
      "dest": "/api/process-wompi-payment.js"
    },
    {
      "src": "/api/employees",
      "dest": "/api/employees.js"
    },
    {
      "src": "/api/hours",
      "dest": "/api/hours.js"
    },
    {
      "src": "/api/payments",
      "dest": "/api/payments.js"
    },
    {
      "src": "/api/payroll",
      "dest": "/api/payroll.js"
    },
    {
      "src": "/api/webhooks/wompi",
      "dest": "/api/webhooks/wompi.js"
    },
    {
      "src": "/api/webhooks/paypal",
      "dest": "/api/webhooks/paypal.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "**/*.@(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "**",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
