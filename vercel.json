{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/login.html",
      "destination": "/frontend/login.html"
    },
    {
      "source": "/register.html",
      "destination": "/frontend/register.html"
    },
    {
      "source": "/admin.html",
      "destination": "/frontend/admin.html"
    },
    {
      "source": "/modulos/(.*)",
      "destination": "/frontend/modulos/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "/frontend/static/$1"
    }
  ]
}
