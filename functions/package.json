{
  "name": "axyra-enterprise-backend",
  "version": "1.0.0",
  "description": "Backend profesional para AXYRA - Sistema de Gesti√≥n Empresarial",
  "main": "index.js",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:all": "firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "logs": "firebase functions:log",
    "logs:follow": "firebase functions:log --follow",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "config:get": "firebase functions:config:get",
    "config:set": "firebase functions:config:set",
    "config:unset": "firebase functions:config:unset",
    "emulators": "firebase emulators:start",
    "emulators:functions": "firebase emulators:start --only functions",
    "emulators:firestore": "firebase emulators:start --only firestore",
    "emulators:storage": "firebase emulators:start --only storage",
    "emulators:all": "firebase emulators:start --only functions,firestore,storage",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "axios": "^1.4.0",
    "crypto": "^1.0.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "eslint": "^8.45.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "firebase",
    "functions",
    "backend",
    "api",
    "enterprise",
    "management",
    "payments",
    "wompi",
    "payu"
  ],
