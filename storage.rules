rules_version = '2';

// Reglas de Storage para AXYRA - Sistema de Gestión de Nóminas
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para archivos de usuarios autenticados
    match /users/{userId}/{allPaths=**} {
      // Solo el usuario propietario puede acceder a sus archivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validar que el archivo no exceda 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024;
      
      // Solo permitir tipos de archivo específicos
      allow write: if request.resource.contentType.matches('image/.*') ||
                      request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('text/.*') ||
                      request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
                      request.resource.contentType.matches('application/vnd.ms-excel') ||
                      request.resource.contentType.matches('application/vnd.ms-office');
    }
    
    // Reglas para archivos de la empresa (logos, documentos corporativos)
    match /company/{allPaths=**} {
      // Solo usuarios autenticados pueden leer
      allow read: if request.auth != null;
      
      // Solo administradores pueden escribir
      allow write: if request.auth != null && 
                      exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Validar tamaño máximo de 5MB para archivos corporativos
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
    
    // Reglas para documentos de nómina
    match /payroll/{companyId}/{allPaths=**} {
      // Solo usuarios autenticados de la misma empresa
      allow read, write: if request.auth != null && 
                            exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
                            get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      
      // Validar que sea un archivo de nómina
      allow write: if request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
                      request.resource.contentType.matches('application/vnd.ms-excel');
      
      // Tamaño máximo de 20MB para documentos de nómina
      allow write: if request.resource.size < 20 * 1024 * 1024;
    }
    
    // Reglas para reportes generados
    match /reports/{userId}/{allPaths=**} {
      // Solo el usuario propietario puede acceder
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Solo archivos de reporte
      allow write: if request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
                      request.resource.contentType.matches('text/csv');
      
      // Tamaño máximo de 50MB para reportes
      allow write: if request.resource.size < 50 * 1024 * 1024;
    }
    
    // Reglas para avatares de perfil
    match /avatars/{userId} {
      // Solo el usuario propietario puede acceder
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Solo imágenes
      allow write: if request.resource.contentType.matches('image/.*');
      
      // Tamaño máximo de 2MB para avatares
      allow write: if request.resource.size < 2 * 1024 * 1024;
    }
    
    // Reglas para documentos de empleados
    match /employees/{companyId}/{employeeId}/{allPaths=**} {
      // Solo usuarios autenticados de la misma empresa
      allow read, write: if request.auth != null && 
                            exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
                            get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      
      // Solo documentos permitidos
      allow write: if request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('image/.*');
      
      // Tamaño máximo de 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024;
    }
    
    // Reglas para backups y archivos del sistema
    match /system/{allPaths=**} {
      // Solo administradores del sistema
      allow read, write: if request.auth != null && 
                            exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
                            get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reglas para archivos temporales
    match /temp/{userId}/{allPaths=**} {
      // Solo el usuario propietario puede acceder
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Archivos temporales se eliminan automáticamente después de 24 horas
      // Tamaño máximo de 5MB
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
    
    // Denegar acceso a cualquier otra ruta
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}